<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Configuración / Admin</title>

    <link rel="icon" href="/img/logo-main-carwashmetro.png" type="image/png" />

    <!-- Links CSS -->
    <%- include('../templates/styles') %>
  </head>

  <body class="vh-100">
    <div class="container-fluid p-0 m-0 d-flex flex-column h-100">
      <!-- El estilo "display: flex; flex-direction: column; height: 100%;" establece el contenedor padre como flexbox con dirección de columna y altura del 100% -->
      <header
        class="navbar-background d-flex justify-content-center sticky-top">
        <nav class="navbar navbar-expand-lg w-75">
          <a class="navbar-brand ms-5" href="">
            <img
              src="/img/logo-main-carwashmetro.png"
              alt=""
              class="logo-nav img-fluid" />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse justify-content-end me-lg-5 collapse-nav-config me-0"
            id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/admin/dashboard">
                  <button
                    class="button-primary d-flex flex-sm-row justify-content-sm-start align-items-center ms-3 text-icon-container w-100 w-sm-auto">
                    <div class="icon-container">
                      <i class="material-icons"> warehouse </i>
                    </div>
                    <span class="ms-3">Celdas</span>
                  </button>
                </a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/admin/reservationsDashboard">
                  <button
                    class="button-primary d-flex flex-sm-row justify-content-sm-start align-items-center ms-3 text-icon-container w-100 w-sm-auto">
                    <div class="icon-container">
                      <i class="material-icons"> edit_calendar </i>
                    </div>
                    <span class="ms-3">Reservas</span>
                  </button>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/staff">
                  <button
                    class="button-primary d-flex flex-sm-row justify-content-sm-start align-items-center ms-3 text-icon-container w-100 w-sm-auto">
                    <div class="icon-container">
                      <i class="material-icons"> manage_accounts </i>
                    </div>
                    <span class="ms-3">Personal</span>
                  </button>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/settings">
                  <button
                    class="button-primary d-flex flex-sm-row justify-content-sm-start align-items-center ms-3 text-icon-container w-100 w-sm-auto">
                    <div class="icon-container">
                      <i class="material-icons"> settings </i>
                    </div>
                    <span class="ms-3">Configuración</span>
                  </button>
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </header>

      <!-- contenedor principal -->

      <main
        class="container-fluid p-5 gap-6 w-75 d-flex flex-column d-lg-flex justify-content-center align-items-center media-sm-w-100"
        style="flex: 1">
        <div
          class="container-fluid p-0 d-flex flex-column justify-content-center align-items-center">
          <div class="row d-flex justify-content-center">
            <h1 class="text-center rem-2-2 weight-700 opacity-75">
              Cuentas de administrador
            </h1>
          </div>
          <div class="row mt-5 w-100">
            <% admins.forEach(admin => { %>
            <div class="col-12 col-lg-6 p-0">
              <div class="p-3">
                <!-- Contenedor de información de admin -->
                <div class="container-secondary border-primary p-5">
                  <!-- Contenedor de icono y texto de nombre de admin -->
                  <div class="d-flex align-items-center">
                    <div class="icon-container">
                      <i class="material-icons"> person </i>
                    </div>
                    <h3 class="ms-3 opacity-75 weight-700">
                      <%= admin.nombre + ' ' + admin.apellido %>
                    </h3>
                  </div>

                  <hr />

                  <!-- Contenedor de icono y texto de número de identificación de admin -->
                  <div class="d-flex align-items-center">
                    <div class="icon-container">
                      <i class="material-icons"> badge </i>
                    </div>
                    <h3 class="ms-3 font-secondary opacity-75">
                      <%= admin.identificacion %>
                    </h3>
                  </div>

                  <hr />

                  <!-- Contenedor de icono y texto de correo de admin-->
                  <div class="d-flex align-items-center">
                    <div class="icon-container">
                      <i class="material-icons"> email </i>
                    </div>
                    <h3 class="ms-3 font-secondary opacity-75">
                      <%= admin.correo %>
                    </h3>
                  </div>

                  <hr />
                  <!-- Contenedor de icono y texto de contraseña de admin -->
                  <div class="d-flex align-items-center">
                    <div class="icon-container">
                      <i class="material-icons"> key </i>
                    </div>
                    <h3 class="ms-3 font-secondary opacity-75">
                      <%= admin.contrasena %>
                    </h3>
                  </div>

                  <hr />
                  <div class="w-100 d-flex mt-4">
                    <div class="w-50">
                      <span
                        title="Estado de actividad de este administrador"
                        class="h-100 d-flex align-items-center opacity-75 w-70 <%= (req.session.admin && req.session.admin.id_admin === admin.id_admin) ? 'successAlert-primary' : 'errorAlert-primary' %>">
                        <% if (req.session.admin && req.session.admin.id_admin
                        === admin.id_admin) { %> Activo <% } else { %> Inactivo
                        <% } %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <div class="row w-100">
            <form
              action="/admin/logout"
              method="post"
              class="d-flex align-items-center p-4 w-100 d-flex">
              <button
                type="submit"
                class="w-100 button-danger-primary p-2 d-flex align-items-center justify-content-center">
                <i class="material-icons me-2"> logout </i>
                Cerrar sesión
              </button>
            </form>
          </div>
        </div>
      </main>
    </div>

    <!-- Enlaces de scripts -->
    <%- include('../templates/scripts') %>
  </body>
</html>
