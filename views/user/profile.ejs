<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil / CarWashMetro</title>
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="/img/logo-main-carwashmetro.png" type="image/png" />
    <meta
      name="description"
      content="Aquí puedes ver toda tu información personal" />

    <!-- Links CSS -->
    <%- include('../templates/styles') %>
  </head>

  <body class="vh-100">
    <div class="container-fluid p-0 m-0 d-flex flex-column h-100">
      <!-- El estilo "display: flex; flex-direction: column; height: 100%;" establece el contenedor padre como flexbox con dirección de columna y altura del 100% -->
      <%- include(process.env.HEADER_USER_TEMPLATE_PATH) %>

      <!-- contenedor principal -->

      <main
        class="container-fluid p-5 gap-6 w-75 d-flex flex-column justify-content-center flex-lg-row align-items-center media-sm-w-100"
        style="flex: 1">
        <!-- contenedor de información de usuario -->

        <div class="container-fluid p-0">
          <!-- Contenedor de icono y texto exterior -->

          <div class="p-0">
            <div class="d-flex align-items-center justify-content-center">
              <div class="icon-container">
                <i class="material-icons"> feed </i>
              </div>
              <h2 class="ms-3 text-center rem-2-2 weight-700 opacity-75">
                Tu información
              </h2>
            </div>
            <!-- Sub contenedor de información de usuario -->

            <div class="mt-4 container-secondary border-primary p-5">
              <!-- Contenedor de icono y texto de nombre de usuario -->
              <div class="d-flex align-items-center">
                <div class="icon-container">
                  <i class="material-icons"> person </i>
                </div>
                <h3 class="ms-3 opacity-75">
                  <%= user.nombre %> <%= user.apellido %>
                </h3>
              </div>

              <hr />

              <!-- Contenedor de icono y texto de número de identificación -->
              <div class="d-flex align-items-center">
                <div class="icon-container">
                  <i class="material-icons"> badge </i>
                </div>
                <h3 class="ms-3 font-secondary opacity-75">
                  <%= user.identificacion %>
                </h3>
              </div>

              <hr />

              <!-- Contenedor de icono y texto de número de telefono -->
              <div class="d-flex align-items-center">
                <div class="icon-container">
                  <i class="material-icons"> call </i>
                </div>
                <h3 class="ms-3 font-secondary opacity-75">
                  <%= user.telefono %>
                </h3>
              </div>

              <hr />
              <button
                class="mt-4 w-100 button-primary p-2 d-flex align-items-center justify-content-center"
                onclick="mostrarAvisoUser()">
                <i class="material-icons me-1"> edit </i>
                Modificar información
              </button>
              <form action="/user/logout" method="post">
                <button
                  type="submit"
                  class="mt-4 w-100 button-danger-primary p-2 d-flex align-items-center justify-content-center">
                  <i class="material-icons me-2"> logout </i>
                  Cerrar sesión
                </button>
              </form>
            </div>

            <!-- Cuadro o modal de aviso -->
            <%- include('../templates/profileModal') %>
          </div>
        </div>

        <!-- Contenedor de información de vehículos -->

        <div class="container-fluid p-0">
          <!-- Contenedor de icono y texto exterior -->

          <div class="d-flex align-items-center justify-content-center">
            <div class="icon-container">
              <i class="material-icons"> airport_shuttle </i>
            </div>
            <h2 class="ms-3 text-center rem-2-2 weight-700 opacity-75">
              Tu vehículo
            </h2>
          </div>

          <!-- Contenedor de info de vehículo -->
          <div
            class="d-flex flex-column flex-sm-row justify-content-between justify-content-center mt-4 container-secondary border-primary p-5 gap-4">
            <!-- Contenedor de info de tipó de vehiculo -->

            <div class="d-flex align-items-center">
              <!-- Icono dinámico en base al tipo de vehiculo-->
              <div class="icon-container">
                <% if (user.vehiculo.tipo_vehiculo === 'Carro') { %>
                <i class="material-icons">directions_car</i>
                <% } else if (user.vehiculo.tipo_vehiculo === 'Moto') { %>
                <i class="material-icons">two_wheeler</i>
                <% } else { %>
                <!-- Manejar otro tipo de vehículo o mostrar un icono predeterminado -->
                <i class="material-icons">directions_car</i>
                <% } %>
              </div>
              <h2 class="ms-3 opacity-75">
                <%= user.vehiculo.tipo_vehiculo %>
              </h2>
            </div>

            <!-- Contenedor de info de marca de vehículo -->
            <div class="d-flex align-items-center">
              <div class="icon-container">
                <i class="material-icons"> branding_watermark </i>
              </div>
              <h2 class="ms-3 opacity-75"><%= user.vehiculo.marca %></h2>
            </div>

            <!-- Contenedor de info de placa de vehículo -->
            <div class="d-flex align-items-center">
              <div class="icon-container">
                <i class="material-icons"> money </i>
              </div>
              <h2 class="ms-3 font-secondary opacity-75">
                <%= user.vehiculo.placa %>
              </h2>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Enlaces de scripts -->
    <%- include('../templates/scripts') %>
  </body>
</html>
