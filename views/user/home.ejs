<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil / CarWashMetro</title>
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="/img/logo-main-carwashmetro.png" type="image/png" />
    <meta
      name="description"
      content="Aquí puedes ver toda tu información personal" />

    <!-- Links CSS -->
    <%- include('../templates/styles') %>
  </head>

  <body class="vh-100">
    <div class="container-fluid p-0 m-0 d-flex flex-column h-100">
      <!-- El estilo "display: flex; flex-direction: column; height: 100%;" establece el contenedor padre como flexbox con dirección de columna y altura del 100% -->
      <%- include('../templates/headeruser') %>

      <!-- contenedor principal -->

      <main
        class="container-fluid p-5 gap-6 w-75 d-flex flex-column flex-lg-row align-items-center media-sm-w-100"
        style="flex: 1">
        <!-- Agrega esta sección para mostrar mensajes -->
        <% if (message && message.type === 'success') { %>
        <div role="alert"><%= message.text %></div>
        <% } else if (message && message.type === 'error') { %>
        <div role="alert"><%= message.text %></div>
        <% } %>

        <h2>Reservar Celda</h2>

        <!-- Agrega tu formulario aquí -->
        <form action="/user/reservar" method="POST">
          <div>
            <label for="id_celda">Selecciona una celda:</label>
            <select name="id_celda" id="id_celda">
              <% celdasDisponibles.forEach(celda => { %>
              <option value="<%= celda.id_celda %>">
                ID: <%= celda.id_celda %> - Tipo: <%= celda.tipo_celda %>
              </option>
              <% }); %>
            </select>
          </div>

          <button type="submit">Reservar</button>
        </form>
      </main>
    </div>

    <!-- Enlaces de scripts -->
    <%- include('../templates/scripts') %>
  </body>
</html>
